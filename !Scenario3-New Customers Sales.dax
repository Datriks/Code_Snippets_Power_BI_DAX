New_Customer_Sales =
VAR CustomerTM =
    VALUES ( Sales[Customer ID] )
VAR PriorCustomers =
    CALCULATETABLE (
        VALUES ( Sales[Customer ID] ),
        FILTER (
            ALL ( Dates ),
            Dates[Date]
                > MIN ( Dates[Date] ) - [Time Period Value]
                && Dates[Date] < MIN ( Dates[Date] )
        )
    )
RETURN
    CALCULATE ( [Total Sales], 
    	EXCEPT ( CustomerTM, PriorCustomers ) )